<div>
  <div>
    <h1>
      List of users
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Username
        </th>

        <th>
          Private?
        </th>

        <th>
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_users.each do |a_user| %>
      <tr>
        <td>
          <%= a_user.username%>
        </td>

        <td>
          <% if a_user.private == true %>
          <p> Yes </p>

          <% else %>
          <p> No </p>

          <% end %>
        </td>

        <td>
          <td>

            <form action="/insert_follow_request" method="post">
              <input type="hidden" name="query_recipient_id" value="<%= a_user.id %>">

              <button>
                Follow
              </button>
            </form>
      </td>

        </td>


        <td>
          <a href="/users/<%= a_user.username %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
